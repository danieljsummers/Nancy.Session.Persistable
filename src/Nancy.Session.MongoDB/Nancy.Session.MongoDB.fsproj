<Project Sdk="FSharp.NET.Sdk;Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netstandard1.6</TargetFrameworks>

    <Description>A MongoDB-backed session provider for Nancy (utilizing the Nancy.Session.Persistable API)</Description>
    <PackageTags>$(PackageTags) MongoDB</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="AssemblyInfo.fs" />
    <Compile Include="MongoDbSessions.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.2.4" Condition="'$(TargetFramework)' == 'net452'" />
    <PackageReference Include="MongoDB.Driver" Version="2.3.0-beta1" Condition="'$(TargetFramework)' == 'netstandard1.6'" />

    <ProjectReference Include="..\Nancy.Session.Persistable\Nancy.Session.Persistable.fsproj" />
  </ItemGroup>

</Project>
